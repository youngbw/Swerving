<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="mainAppTheme">
        <item name="android:background">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:dividerHeight">3dip</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>


    <style name="altAppTheme">
        <item name="android:background">#91FFDA</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabbedButtonTheme">

        <item name="android:background">@drawable/text_backing</item>
        <item name="android:borderlessButtonStyle">@color/background_material_light</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:selectable">true</item>
        <item name="android:drawable">@color/background_material_dark</item>
        <item name="android:state_selected">false</item>
        <item name="android:unselectedAlpha">125</item>

    </style>

    <style name="loginButtonTheme" parent="tabbedButtonTheme">

        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="accountButtonTheme" parent="tabbedButtonTheme">

        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="textWidgetTheme">

        <item name="android:background">@drawable/text_backing</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000000</item>

    </style>


    <!-- Action bar style -->
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText">
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
