<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
    style="@style/mainAppTheme" android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_comment_tag"
        style="@style/textWidgetTheme"
        android:background="#FFFFFF"
        android:text="@string/friends_button_text"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:textSize="14sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_message_view"
        style="@style/textWidgetTheme"
        android:text="@string/mySwerveButtonText"
        android:layout_gravity="left"
        android:textSize="18sp"/>

</LinearLayout>
