<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    style="@style/mainAppTheme" android:orientation="horizontal" android:weightSum="1.0"
    android:gravity="center_vertical"
    android:padding="3dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/friendsListNameText"
        android:textSize="16sp"
        android:text="@string/friends_button_text"
        android:layout_weight=".8"
        android:textStyle="bold"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:maxLength="20"
        android:width="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".2"
        android:weightSum="1.0"
        android:gravity="right">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeFriendButton"
            android:src="@drawable/minus_sign"
            style="@style/tabbedButtonTheme"
            android:layout_marginRight="2dp"
            android:layout_weight=".5"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/selectGroupButton"
            style="@style/tabbedButtonTheme"
            android:src="@drawable/group_icon"
            android:layout_weight=".5"/>

    </LinearLayout>



</LinearLayout>
